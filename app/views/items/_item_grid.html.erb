<table>
  <tr>
    <th>
      Name
    </th>
    <th>
      Category
    </th>
    <th>
      Room
    </th>
    <th>
      Quantity
    </th>
    <th>
      Make
    </th>
    <th>
      Model
    </th>
    <th>
      Place of Purchase
    </th>
    <th>
      Purchase Date
    </th>
    <th>
      Purchase Price
    </th>
    <th>
      Replacement Price
    </th>
    <th>
      Serial Number
    </th>
    <th>
      Bar Code
    </th>
  </tr>
  <% @items.each do |item| %>
    <tr>
      <td>
        <%= item.name %>
      </td>
      <td>
        <% unless item.category.nil? %>
          <%= item.category.name %>
        <% else %>
          Uncategorized
        <% end %>
      </td>
      <td>
        <% unless item.room.nil? %>
          <%= item.room.name %>
        <% else %>
          No Room
        <% end %>
      </td>
      <td>
        <%= item.quantity %>
      </td>
      <td>
        <%= item.make %>
      </td>
      <td>
        <%= item.model %>
      </td>
      <td>
        <%= item.place_of_purchase %>
      </td>
      <td>
        <%= item.purchase_date %>
      </td>
      <td>
        <%= item.purchase_price %>
      </td>
      <td>
        <%= item.replacement_price %>
      </td>
      <td>
        <%= item.serial_number %>
      </td>
      <td>
        <%= item.bar_code %>
      </td>
      <td>
        <%= link_to "Delete", delete_item_path(item.id), method: :delete, remote: true, :data => {confirm: "Are you sure you want to permanently delete this item?"} %>
      </td>
    </tr>
  <% end %>
</table>