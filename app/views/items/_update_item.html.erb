<h1>Update <%= item.name %></h1>
<%= form_for item, method: :patch, remote: true do |f| %> 
  <div class="row">
    <div class="large-4 columns">
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :house_id %>
      <%= f.select :house_id, @house_options %>
      <%= f.label :room_id %>
      <%= f.select :room_id, @room_options %>
      <%= f.label :category_id %>
      <%= f.select :category_id, @category_options %>
      <%= f.label :quantity %>
      <%= f.number_field :quantity, value: 1 %>
      <%= f.submit "Update Item", class: "button" %>
    </div>
    <div class="large-4 columns">
      <%= f.label :make %>
      <%= f.text_field :make %>
      <%= f.label :model %>
      <%= f.text_field :model %>
      <%= f.label :place_of_purchase %>
      <%= f.text_field :place_of_purchase %>
      <%= f.label :purchase_price %>
      <%= f.number_field :purchase_price, step: 0.01 %>
      <%= f.label :replacement_price %>
      <%= f.number_field :replacement_price, step: 0.01 %>
    </div>
    <div class="large-4 columns">
      <%= f.label :purchase_date %>
      <%= f.date_select :purchase_date, start_year: 1900, end_year: Date.today.year %>
      <%= f.label :serial_number %>
      <%= f.text_field :serial_number %>
      <%= f.label :bar_code %>
      <%= f.text_field :bar_code %>
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>
  </div>
<% end %> 