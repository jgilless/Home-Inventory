<div class="row">
  <div class="large-2 columns">
    <div id="house_show">
      <!-- House Rendered Here -->
      <h1> HOUSE GOES HERE </h1>
    </div>
  </div>
  <div class="large-10 columns">
    <div id="item_show">
      <!-- Item Rendered Here -->
      <h1> ITEM GOES HERE </h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="large-2 columns">
    <h1>Houses</h1>
    <% @houses.each do |house| %>
      <div class="row">
        <%= link_to house_items_path(:house_id => house.id), remote: true, class: "house", id: "house_#{house.id}", data: house.id do %>
          <div class="large-12 columns">
            <%= house.name %><br />
            <%= house.address.natural %><br /><br />
          </div>
        <% end %>
      </div>
    <% end %>
    <a href="#" data-reveal-id="new_house" class="button">New House</a>

    <div id="new_house" class="reveal-modal" data-reveal>
      <div id="create_house">
        <%= render 'houses/create_house' %>
      </div>
      <a class="close-reveal-modal">&#215;</a>
    </div>
  </div>
  <div class="large-10 columns">
    <h1>Items</h1>
    
    <a href="#" data-reveal-id="new_item" class="button">New Item</a>

    <div id="new_item" class="reveal-modal" data-reveal>
      <div id="create_item">
        <%= render 'items/create_item' %>
      </div>
      <a class="close-reveal-modal">&#215;</a>
    </div>

    <a href="#" data-reveal-id="new_category" class="button">New Category</a>

    <div id="new_category" class="reveal-modal" data-reveal>
      <div id="create_category">
        <%= render 'categories/create_category' %>
      </div>
      <a class="close-reveal-modal">&#215;</a>
    </div>

    <a href="#" data-reveal-id="new_room" class="button">New Room</a>

    <div id="new_room" class="reveal-modal" data-reveal>
      <div id="create_room">
        <%= render 'rooms/create_room' %>
      </div>
      <a class="close-reveal-modal">&#215;</a>
    </div>

    <%= link_to "Download CSV", items_path(format: :csv), class: "button success" %>
    <%= link_to "Download Excel", items_path(format: :xls), class: "button success" %>

    <div id="item_container">
      <!-- items partial gets populated here -->  
    </div>
  </div>
</div>